extends ../layout.pug



//- создаем пременные для страницы works (задаем тайтл и модификатор для враппера)
block variables
    - title= 'welcome';
    - wrapper_modif= 'wrapper--welcome';
    //- выключаю футер,хедер и мейн
    - isPage =false;
block wrapper_addon
    canvas.webgl
    a(href='#').authorization-button Авторизоваться
    .flipper
        
        .flipper__wrapper
            .flipper__welcome.welcome
                .welcome__top
                    .welcome__pic
                        img(class='welcome__img' src=require("../../img/avatar_my.jpg"))
                .welcome__bottom
                    .welcome__name-text.
                        Александр Косицын
                    .welcome__text-amplua.
                        Личный сайт веб разработчика
                    +socialListMixin('welcome__socials', [['vk','https://vk.com/alex_gorn20'],['github','https://github.com/AlexanderKositsyn'],['in','#']])
                    .welcome__button-row
                        a(href='./works.html').button.button--welcome.welcome__works Мои работы
                        a(href='./about.html').button.button--welcome.welcome__about Обо мне
                        a(href='./blog.html').button.button--welcome.welcome__blog Блог
            
            .flipper__authorization.authorization
                h1.title.title--underlined.authorization__title Авторизуйтесь
                form.authorization__form#authorization__form(action="authorization.php")
                    .authorization__tooltip Заполните поле формы
                    .authorization__wrapper-form
                        label.authorization__label
                            svg.authorization__input-svg
                                use(xlink:href=require(`../../icons/sprite/sprite.svg`)+'#login')
                            input(type="text" name='userLogin' id='user_login' placeholder='Логин' class="authorization__input")
                        label.authorization__label
                            svg.authorization__input-svg
                                use(xlink:href=require(`../../icons/sprite/sprite.svg`)+"#password")
                            input(type="text" name='userPassword' id='user_password' placeholder='Пароль' class="authorization__input")
                        <label class="authorization__label-isHuman">
                            <input type="checkbox" name="userisHuman"  id='user_isHuman'class="authorization__input authorization__input--checkbox" value='yes'>
                            <div class="authorization__checkbox-fake"></div>
                            <div class="authorization__input-text">Я человек</div>
                        </label>
                        h5.title.authorization__title-isHuman Вы точно не робот?
                        <div class="authorization__row">
                            <label class="authorization__label-radio authorization__label-radio--yes">
                                <input name="user_isntRobot" id='userisntRobot' type="radio" class="authorization__input  authorization__input--radio" value='yes' >
                                <div class="authorization__radio-fake"></div>
                                <div class="authorization__input-text">Да</div>
                            </label>
                            <label class="authorization__label-radio authorization__label-radio--no">
                                <input name="user_isntRobot" id='userisRobot' type="radio" class="authorization__input authorization__input--radio"  value='card' checked>
                                <div class="authorization__radio-fake"></div>
                                <div class="authorization__input-text">Не уверен</div>
                            </label>
                        </div>
                        <div class="authorization__row">
                            a(href='/').button.button--authorization.authorization__to-main На главную 
                            <button type="submit" class="button button--authorization authorization__submit ">Войти</button>
                        </div>
