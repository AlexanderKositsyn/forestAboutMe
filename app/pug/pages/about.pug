                                    <circle class='about-me__outer-circle' style="stroke-dasharray: 0, 158;" data-percent='80' r='25' cx='50' cy='50'/>
                                    <circle class='about-me__inner-circle' r='35' cx='50' cy='50'/>
                                </svg>
                                span.about-me__circle-text Gulp   
                            li.about-me__circle-item 
                                <svg class='about-me__circle-svg' viewBox ='0 0 100 100'>
                                    <circle class='about-me__outer-circle' style="stroke-dasharray: 0, 158;" data-percent='70' r='25' cx='50' cy='50'/>
                                    <circle class='about-me__inner-circle' r='35' cx='50' cy='50'/>
                                </svg> 
                                span.about-me__circle-text Bower  
        section.contacts
            .map#map
            .contacts__wrapper
                h1.title.title--underlined.contacts__title Контакты
                
                - var icons = [['skype', 'skype_kdn'], ["envelope2",'astahov@gmail.com'], ['phone2','+7 931 200 93 24'], ['map_marker','Новосибирск, ул. Инская, д.14' ]]
                ul.contacts__list
                    //цикл для генерирования списка контактов
                    each val in icons
                        li.contacts__item
                            a(href='#').contacts__link
                                svg.contacts__svg
                                    use(xlink:href=require('../../icons/sprite/sprite.svg')+"#"+`${val[0]}`)
