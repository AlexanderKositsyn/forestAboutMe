                                    <circle class='about-me__outer-circle' style="stroke-dasharray: 0, 158;"  data-percent='95' r='25' cx='50' cy='50'/>
                                    <circle class='about-me__inner-circle' r='35' cx='50' cy='50'/>
                                </svg>   
                                span.about-me__circle-text HTML5
                            li.about-me__circle-item 
                                <svg class='about-me__circle-svg' viewBox ='0 0 100 100'>
                                    <circle class='about-me__outer-circle' style="stroke-dasharray: 0, 158;" data-percent='10' r='25' cx='50' cy='50'/>
                                    <circle class='about-me__inner-circle' r='35' cx='50' cy='50'/>
                                </svg>
                                span.about-me__circle-text CSS3    
                            li.about-me__circle-item
                                
                                <svg class='about-me__circle-svg' viewBox ='0 0 100 100'>
                                    <circle class='about-me__outer-circle' style="stroke-dasharray: 0, 158;" data-percent='20' r='25' cx='50' cy='50'/>
                                    <circle class='about-me__inner-circle' r='35' cx='50' cy='50'/>
                                </svg> 
                                span.about-me__circle-text JavaScript<br>& jQuery   
                    li.about-me__skills-item.about-me__skills-item--backend
