                            li.about-me__circle-item            
                                <svg class='about-me__circle-svg' viewBox ='0 0 100 100'>
                                    <circle class='about-me__outer-circle' style="stroke-dasharray: 0, 158;" data-percent='30' r='25' cx='50' cy='50'/>
                                    <circle class='about-me__inner-circle' r='35' cx='50' cy='50'/>
                                </svg>
                                span.about-me__circle-text PHP   
                            li.about-me__circle-item 
                                <svg class='about-me__circle-svg' viewBox ='0 0 100 100'>
                                    <circle class='about-me__outer-circle' style="stroke-dasharray: 0, 158;" data-percent='25' r='25' cx='50' cy='50'/>
                                    <circle class='about-me__inner-circle' r='35' cx='50' cy='50'/>
                                </svg>   
                                span.about-me__circle-text mySQL
                            li.about-me__circle-item 
